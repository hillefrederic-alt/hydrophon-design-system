{
  "$schema": "https://design-tokens.org/schemas/design-tokens.json",
  "fontFamily": {
    "sans": {
      "$type": "fontFamily",
      "$value": ["Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
      "$description": "Primary font family for all text. Inter provides modern, professional appearance suitable for B2B context."
    },
    "mono": {
      "$type": "fontFamily",
      "$value": ["JetBrains Mono", "Fira Code", "Courier New", "monospace"],
      "$description": "Monospace font for code snippets and technical specifications."
    }
  },
  "fontSize": {
    "xs": {
      "$type": "dimension",
      "$value": "12px",
      "$description": "Extra small - Captions, legal text"
    },
    "sm": {
      "$type": "dimension",
      "$value": "14px",
      "$description": "Small - Labels, form inputs, UI text"
    },
    "base": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "Base size - Body text, paragraphs"
    },
    "lg": {
      "$type": "dimension",
      "$value": "18px",
      "$description": "Large - Emphasis body text, large paragraphs"
    },
    "xl": {
      "$type": "dimension",
      "$value": "20px",
      "$description": "Extra large - Subheadings, H5"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "2X large - H4 headings"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "30px",
      "$description": "3X large - H3 headings"
    },
    "4xl": {
      "$type": "dimension",
      "$value": "36px",
      "$description": "4X large - H2 headings"
    },
    "5xl": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "5X large - H1 headings"
    },
    "6xl": {
      "$type": "dimension",
      "$value": "60px",
      "$description": "6X large - Hero headings, special titles"
    }
  },
  "fontWeight": {
    "regular": {
      "$type": "fontWeight",
      "$value": 400,
      "$description": "Regular weight for body text"
    },
    "medium": {
      "$type": "fontWeight",
      "$value": 500,
      "$description": "Medium weight for emphasis and UI elements"
    },
    "semibold": {
      "$type": "fontWeight",
      "$value": 600,
      "$description": "Semibold weight for subheadings"
    },
    "bold": {
      "$type": "fontWeight",
      "$value": 700,
      "$description": "Bold weight for headings"
    }
  },
  "lineHeight": {
    "tight": {
      "$type": "number",
      "$value": 1.25,
      "$description": "Tight line height for large headings"
    },
    "snug": {
      "$type": "number",
      "$value": 1.375,
      "$description": "Snug line height for subheadings"
    },
    "normal": {
      "$type": "number",
      "$value": 1.5,
      "$description": "Normal line height for body text"
    },
    "relaxed": {
      "$type": "number",
      "$value": 1.625,
      "$description": "Relaxed line height for comfortable reading"
    },
    "loose": {
      "$type": "number",
      "$value": 2,
      "$description": "Loose line height for special layouts"
    }
  },
  "letterSpacing": {
    "tighter": {
      "$type": "dimension",
      "$value": "-0.05em",
      "$description": "Tighter tracking for large display text"
    },
    "tight": {
      "$type": "dimension",
      "$value": "-0.025em",
      "$description": "Tight tracking for headings"
    },
    "normal": {
      "$type": "dimension",
      "$value": "0em",
      "$description": "Normal tracking for body text"
    },
    "wide": {
      "$type": "dimension",
      "$value": "0.025em",
      "$description": "Wide tracking for UI elements"
    },
    "wider": {
      "$type": "dimension",
      "$value": "0.05em",
      "$description": "Wider tracking for labels and buttons"
    }
  },
  "typography": {
    "heading": {
      "h1": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.5xl}",
          "fontWeight": "{fontWeight.bold}",
          "lineHeight": "{lineHeight.tight}",
          "letterSpacing": "{letterSpacing.tight}"
        },
        "$description": "Main page heading (48px, bold, tight)"
      },
      "h2": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.4xl}",
          "fontWeight": "{fontWeight.bold}",
          "lineHeight": "{lineHeight.tight}",
          "letterSpacing": "{letterSpacing.tight}"
        },
        "$description": "Section heading (36px, bold, tight)"
      },
      "h3": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.3xl}",
          "fontWeight": "{fontWeight.semibold}",
          "lineHeight": "{lineHeight.snug}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Subsection heading (30px, semibold, snug)"
      },
      "h4": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.2xl}",
          "fontWeight": "{fontWeight.semibold}",
          "lineHeight": "{lineHeight.snug}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Card heading (24px, semibold, snug)"
      },
      "h5": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.xl}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Small heading (20px, medium, normal)"
      },
      "h6": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.lg}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Smallest heading (18px, medium, normal)"
      }
    },
    "body": {
      "large": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.lg}",
          "fontWeight": "{fontWeight.regular}",
          "lineHeight": "{lineHeight.relaxed}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Large body text for emphasis (18px)"
      },
      "base": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.base}",
          "fontWeight": "{fontWeight.regular}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Standard body text (16px)"
      },
      "small": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.regular}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Small body text (14px)"
      }
    },
    "ui": {
      "button": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.wide}"
        },
        "$description": "Button text (14px, medium, wide tracking)"
      },
      "label": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Form label text (14px, medium)"
      },
      "caption": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.xs}",
          "fontWeight": "{fontWeight.regular}",
          "lineHeight": "{lineHeight.normal}",
          "letterSpacing": "{letterSpacing.normal}"
        },
        "$description": "Caption and helper text (12px)"
      }
    }
  }
}
