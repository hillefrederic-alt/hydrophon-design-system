{
  "$schema": "https://design-tokens.org/schema.json",
  "modal": {
    "overlay": {
      "background": {
        "$value": "rgba(0, 0, 0, 0.5)",
        "$type": "color",
        "$description": "Modal Overlay Hintergrund - halbtransparentes Schwarz"
      },
      "blur": {
        "$value": "4px",
        "$type": "dimension",
        "$description": "Modal Overlay Backdrop-Blur für modernen Effekt"
      }
    },
    "content": {
      "background": {
        "$value": "{neutral.white}",
        "$type": "color",
        "$description": "Modal Content Hintergrundfarbe"
      },
      "borderRadius": {
        "$value": "{borderRadius.lg}",
        "$type": "dimension",
        "$description": "Modal Content Eckenradius - 8px"
      },
      "shadow": {
        "$value": "{shadow.xl}",
        "$type": "shadow",
        "$description": "Modal Content Schatten für Elevation"
      },
      "padding": {
        "x": {
          "$value": "{spacing.6}",
          "$type": "dimension",
          "$description": "Modal Content horizontales Padding - 24px"
        },
        "y": {
          "$value": "{spacing.5}",
          "$type": "dimension",
          "$description": "Modal Content vertikales Padding - 20px"
        }
      }
    },
    "size": {
      "sm": {
        "width": {
          "$value": "400px",
          "$type": "dimension",
          "$description": "Modal Small Breite - für Bestätigungsdialoge"
        },
        "maxHeight": {
          "$value": "80vh",
          "$type": "dimension",
          "$description": "Modal Small maximale Höhe"
        }
      },
      "md": {
        "width": {
          "$value": "600px",
          "$type": "dimension",
          "$description": "Modal Medium Breite - für Formulare"
        },
        "maxHeight": {
          "$value": "85vh",
          "$type": "dimension",
          "$description": "Modal Medium maximale Höhe"
        }
      },
      "lg": {
        "width": {
          "$value": "900px",
          "$type": "dimension",
          "$description": "Modal Large Breite - für komplexe Inhalte"
        },
        "maxHeight": {
          "$value": "90vh",
          "$type": "dimension",
          "$description": "Modal Large maximale Höhe"
        }
      }
    },
    "header": {
      "paddingBottom": {
        "$value": "{spacing.4}",
        "$type": "dimension",
        "$description": "Modal Header unteres Padding - 16px"
      },
      "borderBottom": {
        "$value": "1px solid {neutral.200}",
        "$type": "border",
        "$description": "Modal Header untere Rahmenlinie zur Trennung"
      }
    },
    "title": {
      "fontSize": {
        "$value": "{fontSize.2xl}",
        "$type": "dimension",
        "$description": "Modal Titel Schriftgröße - 24px (H4)"
      },
      "fontWeight": {
        "$value": "{fontWeight.semibold}",
        "$type": "fontWeight",
        "$description": "Modal Titel Schriftgewicht - semibold (600)"
      },
      "color": {
        "$value": "{neutral.900}",
        "$type": "color",
        "$description": "Modal Titel Farbe - dunkles Grau"
      }
    },
    "closeButton": {
      "size": {
        "$value": "32px",
        "$type": "dimension",
        "$description": "Modal Close-Button Größe"
      },
      "iconSize": {
        "$value": "20px",
        "$type": "dimension",
        "$description": "Modal Close-Button Icon Größe"
      },
      "color": {
        "$value": "{neutral.500}",
        "$type": "color",
        "$description": "Modal Close-Button Standard-Farbe"
      },
      "colorHover": {
        "$value": "{neutral.700}",
        "$type": "color",
        "$description": "Modal Close-Button Hover-Farbe"
      },
      "backgroundHover": {
        "$value": "{neutral.100}",
        "$type": "color",
        "$description": "Modal Close-Button Hover-Hintergrund"
      },
      "borderRadius": {
        "$value": "{borderRadius.md}",
        "$type": "dimension",
        "$description": "Modal Close-Button Eckenradius - 6px"
      }
    },
    "body": {
      "paddingY": {
        "$value": "{spacing.4}",
        "$type": "dimension",
        "$description": "Modal Body vertikales Padding - 16px"
      },
      "color": {
        "$value": "{neutral.700}",
        "$type": "color",
        "$description": "Modal Body Textfarbe"
      }
    },
    "footer": {
      "paddingTop": {
        "$value": "{spacing.4}",
        "$type": "dimension",
        "$description": "Modal Footer oberes Padding - 16px"
      },
      "borderTop": {
        "$value": "1px solid {neutral.200}",
        "$type": "border",
        "$description": "Modal Footer obere Rahmenlinie zur Trennung"
      },
      "gap": {
        "$value": "{spacing.3}",
        "$type": "dimension",
        "$description": "Modal Footer Abstand zwischen Buttons - 12px"
      }
    },
    "animation": {
      "duration": {
        "$value": "200ms",
        "$type": "duration",
        "$description": "Modal Ein-/Ausblend-Animation Dauer"
      },
      "timing": {
        "$value": "ease-out",
        "$type": "cubicBezier",
        "$description": "Modal Animation Easing-Funktion"
      }
    },
    "zIndex": {
      "$value": "1000",
      "$type": "number",
      "$description": "Modal z-Index - gleich wie Navigation Drawer für modalen Kontext"
    }
  },
  "spinner": {
    "size": {
      "sm": {
        "$value": "16px",
        "$type": "dimension",
        "$description": "Spinner Small - 16px (für kleine Buttons)"
      },
      "md": {
        "$value": "24px",
        "$type": "dimension",
        "$description": "Spinner Medium - 24px (Standard)"
      },
      "lg": {
        "$value": "32px",
        "$type": "dimension",
        "$description": "Spinner Large - 32px (Seitenladeindikator)"
      },
      "xl": {
        "$value": "48px",
        "$type": "dimension",
        "$description": "Spinner Extra Large - 48px (Vollbildlader)"
      }
    },
    "stroke-width": {
      "$value": "2px",
      "$type": "dimension",
      "$description": "Spinner Strichstärke"
    },
    "color": {
      "primary": {
        "$value": "{hydrophon.blau.500}",
        "$type": "color",
        "$description": "Spinner Primärfarbe - Hydrophon Blau"
      },
      "light": {
        "$value": "{neutral.400}",
        "$type": "color",
        "$description": "Spinner helle Variante"
      },
      "on-primary": {
        "$value": "{neutral.white}",
        "$type": "color",
        "$description": "Spinner auf primärem Hintergrund - weiß"
      }
    },
    "track-color": {
      "$value": "{neutral.200}",
      "$type": "color",
      "$description": "Spinner Track-Farbe (Hintergrundkreis)"
    },
    "animation": {
      "duration": {
        "$value": "750ms",
        "$type": "duration",
        "$description": "Spinner Rotationsdauer - 0.75s"
      },
      "timing": {
        "$value": "linear",
        "$type": "cubicBezier",
        "$description": "Spinner Animation - linear für gleichmäßige Rotation"
      }
    },
    "delay": {
      "$value": "200ms",
      "$type": "duration",
      "$description": "Spinner Anzeigeverzögerung - verhindert Flash bei schnellen Operationen"
    }
  },
  "progress": {
    "height": {
      "$value": "8px",
      "$type": "dimension",
      "$description": "Progress Bar Standardhöhe"
    },
    "height-sm": {
      "$value": "4px",
      "$type": "dimension",
      "$description": "Progress Bar schmale Variante"
    },
    "border-radius": {
      "$value": "{borderRadius.full}",
      "$type": "dimension",
      "$description": "Progress Bar Eckenradius - vollständig abgerundet"
    },
    "track": {
      "background": {
        "$value": "{neutral.200}",
        "$type": "color",
        "$description": "Progress Track Hintergrundfarbe"
      }
    },
    "bar": {
      "background": {
        "$value": "{hydrophon.blau.500}",
        "$type": "color",
        "$description": "Progress Bar Füllfarbe - Hydrophon Blau"
      },
      "success": {
        "$value": "{color.success}",
        "$type": "color",
        "$description": "Progress Bar Erfolgsfarbe - grün bei Abschluss"
      }
    },
    "indeterminate": {
      "animation-duration": {
        "$value": "1.5s",
        "$type": "duration",
        "$description": "Indeterminate Progress Animation Dauer"
      }
    },
    "label": {
      "font-size": {
        "$value": "{fontSize.sm}",
        "$type": "dimension",
        "$description": "Progress Label Schriftgröße - 14px"
      },
      "color": {
        "$value": "{neutral.600}",
        "$type": "color",
        "$description": "Progress Label Textfarbe"
      },
      "gap": {
        "$value": "{spacing.2}",
        "$type": "dimension",
        "$description": "Progress Abstand zwischen Bar und Label - 8px"
      }
    }
  },
  "skeleton": {
    "base-color": {
      "$value": "{neutral.200}",
      "$type": "color",
      "$description": "Skeleton Basisfarbe"
    },
    "highlight-color": {
      "$value": "{neutral.100}",
      "$type": "color",
      "$description": "Skeleton Highlight-Farbe für Shimmer-Effekt"
    },
    "border-radius": {
      "$value": "{borderRadius.md}",
      "$type": "dimension",
      "$description": "Skeleton Eckenradius - 6px"
    },
    "animation": {
      "duration": {
        "$value": "1.5s",
        "$type": "duration",
        "$description": "Skeleton Shimmer-Animation Dauer"
      },
      "timing": {
        "$value": "ease-in-out",
        "$type": "cubicBezier",
        "$description": "Skeleton Animation Easing-Funktion"
      }
    },
    "line-height": {
      "$value": "1.2",
      "$type": "number",
      "$description": "Skeleton Zeilenhöhe für Text-Platzhalter"
    },
    "spacing": {
      "$value": "{spacing.2}",
      "$type": "dimension",
      "$description": "Skeleton Abstand zwischen Zeilen - 8px"
    }
  },
  "tooltip": {
    "delay": {
      "$value": "300ms",
      "$type": "duration",
      "$description": "Verzoegerung vor dem Anzeigen (300ms Industry-Standard)"
    },
    "background": {
      "$value": "{neutral.900}",
      "$type": "color",
      "$description": "Dunkler Hintergrund fuer hohen Kontrast"
    },
    "color": {
      "$value": "{neutral.white}",
      "$type": "color",
      "$description": "Weisser Text auf dunklem Hintergrund"
    },
    "font-size": {
      "$value": "{fontSize.sm}",
      "$type": "dimension",
      "$description": "Kleine Schriftgroesse - 14px"
    },
    "padding": {
      "x": {
        "$value": "{spacing.2}",
        "$type": "dimension",
        "$description": "Horizontaler Innenabstand - 8px"
      },
      "y": {
        "$value": "{spacing.1}",
        "$type": "dimension",
        "$description": "Vertikaler Innenabstand - 4px"
      }
    },
    "border-radius": {
      "$value": "{borderRadius.sm}",
      "$type": "dimension",
      "$description": "Leichte Rundung - 2px"
    },
    "max-width": {
      "$value": "200px",
      "$type": "dimension",
      "$description": "Maximale Breite vor Umbruch"
    },
    "arrow": {
      "size": {
        "$value": "6px",
        "$type": "dimension",
        "$description": "Groesse des Pfeil-Indikators"
      }
    },
    "offset": {
      "$value": "5px",
      "$type": "dimension",
      "$description": "Abstand zum Trigger-Element"
    },
    "z-index": {
      "$value": "1100",
      "$type": "number",
      "$description": "Positionierung ueber Modals (1000)"
    },
    "animation": {
      "duration": {
        "$value": "150ms",
        "$type": "duration",
        "$description": "Ein-/Ausblend-Animation - schnell, nicht stoerend"
      }
    }
  }
}
