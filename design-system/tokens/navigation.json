{
  "$schema": "https://design-tokens.org/schema.json",
  "navigation": {
    "header": {
      "height": {
        "desktop": {
          "$value": "80px",
          "$type": "dimension",
          "$description": "Header-Höhe auf Desktop-Geräten"
        },
        "mobile": {
          "$value": "64px",
          "$type": "dimension",
          "$description": "Header-Höhe auf mobilen Geräten"
        }
      },
      "background": {
        "$value": "{neutral.white}",
        "$type": "color",
        "$description": "Header Hintergrundfarbe - Weiß für klare Abgrenzung"
      },
      "borderBottom": {
        "width": {
          "$value": "1px",
          "$type": "dimension",
          "$description": "Header untere Rahmenlinie Breite"
        },
        "color": {
          "$value": "{neutral.200}",
          "$type": "color",
          "$description": "Header untere Rahmenlinie Farbe - subtile Trennung"
        }
      },
      "zIndex": {
        "$value": "100",
        "$type": "number",
        "$description": "Header z-Index für Sticky-Verhalten"
      },
      "shadow": {
        "$value": "{shadow.sm}",
        "$type": "shadow",
        "$description": "Header Schatten beim Scrollen (Sticky-State)"
      },
      "padding": {
        "x": {
          "mobile": {
            "$value": "{spacing.4}",
            "$type": "dimension",
            "$description": "Header horizontales Padding auf Mobile - 16px"
          },
          "desktop": {
            "$value": "{spacing.6}",
            "$type": "dimension",
            "$description": "Header horizontales Padding auf Desktop - 24px"
          }
        },
        "y": {
          "$value": "{spacing.0}",
          "$type": "dimension",
          "$description": "Header vertikales Padding - 0 (Höhe durch height-Token definiert)"
        }
      }
    },
    "link": {
      "color": {
        "default": {
          "$value": "{neutral.700}",
          "$type": "color",
          "$description": "Navigation-Link Standard-Textfarbe"
        },
        "hover": {
          "$value": "{neutral.900}",
          "$type": "color",
          "$description": "Navigation-Link Hover-Textfarbe"
        },
        "active": {
          "$value": "{hydrophon.blau.600}",
          "$type": "color",
          "$description": "Navigation-Link aktive Seite Textfarbe (aria-current)"
        }
      },
      "fontSize": {
        "$value": "{fontSize.base}",
        "$type": "dimension",
        "$description": "Navigation-Link Schriftgröße - 16px"
      },
      "fontWeight": {
        "default": {
          "$value": "{fontWeight.medium}",
          "$type": "fontWeight",
          "$description": "Navigation-Link Standard-Schriftgewicht - 500"
        },
        "active": {
          "$value": "{fontWeight.semibold}",
          "$type": "fontWeight",
          "$description": "Navigation-Link aktive Seite Schriftgewicht - 600"
        }
      },
      "padding": {
        "x": {
          "$value": "{spacing.4}",
          "$type": "dimension",
          "$description": "Navigation-Link horizontales Padding - 16px"
        },
        "y": {
          "$value": "{spacing.3}",
          "$type": "dimension",
          "$description": "Navigation-Link vertikales Padding - 12px"
        }
      },
      "gap": {
        "$value": "{spacing.6}",
        "$type": "dimension",
        "$description": "Abstand zwischen Navigation-Links - 24px"
      },
      "transition": {
        "$value": "color 150ms ease-in-out",
        "$type": "string",
        "$description": "Navigation-Link Farbübergang für Hover-Effekte"
      }
    },
    "activeIndicator": {
      "color": {
        "$value": "{hydrophon.blau.500}",
        "$type": "color",
        "$description": "Aktiver Link Unterstreichung Farbe"
      },
      "height": {
        "$value": "2px",
        "$type": "dimension",
        "$description": "Aktiver Link Unterstreichung Höhe"
      },
      "position": {
        "$value": "bottom",
        "$type": "string",
        "$description": "Aktiver Link Indikator Position - unten am Link"
      }
    },
    "focus": {
      "outline": {
        "color": {
          "$value": "{hydrophon.blau.300}",
          "$type": "color",
          "$description": "Navigation-Link Focus Outline Farbe"
        },
        "width": {
          "$value": "2px",
          "$type": "dimension",
          "$description": "Navigation-Link Focus Outline Breite"
        },
        "offset": {
          "$value": "2px",
          "$type": "dimension",
          "$description": "Navigation-Link Focus Outline Abstand"
        }
      }
    },
    "drawer": {
      "width": {
        "$value": "280px",
        "$type": "dimension",
        "$description": "Mobile Drawer feste Breite"
      },
      "maxWidth": {
        "$value": "80vw",
        "$type": "dimension",
        "$description": "Mobile Drawer maximale Breite (verhindert zu breiten Drawer auf kleinen Geräten)"
      },
      "background": {
        "$value": "{neutral.white}",
        "$type": "color",
        "$description": "Mobile Drawer Hintergrundfarbe"
      },
      "shadow": {
        "$value": "{shadow.xl}",
        "$type": "shadow",
        "$description": "Mobile Drawer Schatten für Elevation"
      },
      "backdropColor": {
        "$value": "rgba(0, 0, 0, 0.5)",
        "$type": "color",
        "$description": "Mobile Drawer Backdrop Overlay Farbe"
      },
      "zIndex": {
        "$value": "1000",
        "$type": "number",
        "$description": "Mobile Drawer z-Index (über allem außer Toasts/Alerts)"
      },
      "transition": {
        "duration": {
          "$value": "300ms",
          "$type": "duration",
          "$description": "Mobile Drawer Slide-In/Out Animation Dauer"
        },
        "easing": {
          "$value": "ease-in-out",
          "$type": "string",
          "$description": "Mobile Drawer Animation Easing"
        }
      },
      "padding": {
        "$value": "{spacing.6}",
        "$type": "dimension",
        "$description": "Mobile Drawer inneres Padding - 24px"
      },
      "link": {
        "padding": {
          "x": {
            "$value": "{spacing.4}",
            "$type": "dimension",
            "$description": "Mobile Drawer Link horizontales Padding - 16px"
          },
          "y": {
            "$value": "{spacing.3}",
            "$type": "dimension",
            "$description": "Mobile Drawer Link vertikales Padding - 12px"
          }
        },
        "minHeight": {
          "$value": "48px",
          "$type": "dimension",
          "$description": "Mobile Drawer Link minimale Höhe für Touch-Targets"
        },
        "gap": {
          "$value": "{spacing.2}",
          "$type": "dimension",
          "$description": "Vertikaler Abstand zwischen Links im Drawer - 8px"
        }
      }
    },
    "toggle": {
      "size": {
        "$value": "44px",
        "$type": "dimension",
        "$description": "Hamburger-Button Größe - WCAG AAA Touch-Target"
      },
      "iconSize": {
        "$value": "24px",
        "$type": "dimension",
        "$description": "Hamburger-Icon Größe"
      },
      "color": {
        "default": {
          "$value": "{neutral.700}",
          "$type": "color",
          "$description": "Hamburger-Button Standard-Farbe"
        },
        "hover": {
          "$value": "{neutral.900}",
          "$type": "color",
          "$description": "Hamburger-Button Hover-Farbe"
        }
      },
      "background": {
        "default": {
          "$value": "transparent",
          "$type": "color",
          "$description": "Hamburger-Button Standard-Hintergrund - transparent"
        },
        "hover": {
          "$value": "{neutral.100}",
          "$type": "color",
          "$description": "Hamburger-Button Hover-Hintergrund - subtiler Grauton"
        }
      },
      "borderRadius": {
        "$value": "{borderRadius.base}",
        "$type": "dimension",
        "$description": "Hamburger-Button Eckenradius - 4px"
      }
    }
  },
  "breadcrumb": {
    "fontSize": {
      "$value": "{fontSize.sm}",
      "$type": "dimension",
      "$description": "Breadcrumb Schriftgröße - 14px für kompakte Navigation"
    },
    "gap": {
      "$value": "{spacing.2}",
      "$type": "dimension",
      "$description": "Abstand zwischen Breadcrumb-Elementen - 8px"
    },
    "marginY": {
      "$value": "{spacing.4}",
      "$type": "dimension",
      "$description": "Vertikaler Abstand der Breadcrumb-Navigation - 16px"
    },
    "separator": {
      "content": {
        "$value": "›",
        "$type": "string",
        "$description": "Chevron-Separator für moderne Richtungsanzeige"
      },
      "color": {
        "$value": "{neutral.400}",
        "$type": "color",
        "$description": "Dezente Separator-Farbe für visuelle Trennung ohne Dominanz"
      },
      "marginX": {
        "$value": "{spacing.2}",
        "$type": "dimension",
        "$description": "Horizontaler Abstand um Separator - 8px"
      }
    },
    "link": {
      "color": {
        "$value": "{hydrophon.blau.600}",
        "$type": "color",
        "$description": "Breadcrumb Link-Farbe - etwas dunkler als primäre Aktionsfarbe"
      },
      "colorHover": {
        "$value": "{hydrophon.blau.700}",
        "$type": "color",
        "$description": "Breadcrumb Link-Farbe bei Hover"
      },
      "textDecoration": {
        "$value": "none",
        "$type": "string",
        "$description": "Keine Unterstreichung im Standard-Zustand"
      },
      "textDecorationHover": {
        "$value": "underline",
        "$type": "string",
        "$description": "Unterstreichung bei Hover für deutliches Feedback"
      }
    },
    "current": {
      "color": {
        "$value": "{neutral.900}",
        "$type": "color",
        "$description": "Aktuelle Seite in neutraler Farbe ohne Link-Interaktion"
      },
      "fontWeight": {
        "$value": "{fontWeight.medium}",
        "$type": "fontWeight",
        "$description": "Medium-Gewicht hebt aktuelle Seite hervor - 500"
      }
    }
  },
  "footer": {
    "background": {
      "$value": "{neutral.100}",
      "$type": "color",
      "$description": "Footer Hintergrundfarbe - dezent vom Hauptinhalt abgesetzt"
    },
    "borderTop": {
      "width": {
        "$value": "1px",
        "$type": "dimension",
        "$description": "Footer obere Rahmenstärke"
      },
      "color": {
        "$value": "{neutral.200}",
        "$type": "color",
        "$description": "Footer obere Rahmenfarbe"
      },
      "style": {
        "$value": "solid",
        "$type": "string",
        "$description": "Footer oberer Rahmenstil"
      }
    },
    "paddingY": {
      "$value": "{spacing.12}",
      "$type": "dimension",
      "$description": "Footer vertikales Padding - 48px für großzügigen Abstand"
    },
    "paddingX": {
      "$value": "{spacing.6}",
      "$type": "dimension",
      "$description": "Footer horizontales Padding - 24px"
    },
    "maxWidth": {
      "$value": "1280px",
      "$type": "dimension",
      "$description": "Footer maximale Breite - konsistent mit Grid-System"
    },
    "gap": {
      "$value": "{spacing.8}",
      "$type": "dimension",
      "$description": "Abstand zwischen Footer-Spalten - 32px"
    },
    "heading": {
      "fontSize": {
        "$value": "{fontSize.sm}",
        "$type": "dimension",
        "$description": "Footer Überschriften-Größe - 14px"
      },
      "fontWeight": {
        "$value": "{fontWeight.semibold}",
        "$type": "fontWeight",
        "$description": "Footer Überschriften-Gewicht - 600 für Betonung"
      },
      "color": {
        "$value": "{neutral.900}",
        "$type": "color",
        "$description": "Footer Überschriften-Farbe - dunkles Grau für Kontrast"
      },
      "textTransform": {
        "$value": "uppercase",
        "$type": "string",
        "$description": "Uppercase für Überschriften-Hierarchie"
      },
      "letterSpacing": {
        "$value": "0.05em",
        "$type": "dimension",
        "$description": "Leicht erhöhter Buchstabenabstand für Uppercase-Lesbarkeit"
      },
      "marginBottom": {
        "$value": "{spacing.4}",
        "$type": "dimension",
        "$description": "Abstand unter Überschrift - 16px"
      }
    },
    "link": {
      "color": {
        "$value": "{neutral.600}",
        "$type": "color",
        "$description": "Footer Link-Farbe - dezentes Grau"
      },
      "colorHover": {
        "$value": "{neutral.900}",
        "$type": "color",
        "$description": "Footer Link-Farbe bei Hover - dunkler für Kontrast"
      },
      "fontSize": {
        "$value": "{fontSize.sm}",
        "$type": "dimension",
        "$description": "Footer Link-Größe - 14px"
      },
      "lineHeight": {
        "$value": "2",
        "$type": "number",
        "$description": "Großzügige Zeilenhöhe für Touch-Targets - 28px bei 14px Schrift"
      }
    },
    "legal": {
      "fontSize": {
        "$value": "{fontSize.xs}",
        "$type": "dimension",
        "$description": "Footer Legal-Text Größe - 12px für sekundäre Information"
      },
      "color": {
        "$value": "{neutral.500}",
        "$type": "color",
        "$description": "Footer Legal-Text Farbe - dezentes Grau"
      },
      "marginTop": {
        "$value": "{spacing.8}",
        "$type": "dimension",
        "$description": "Abstand über Legal-Bereich - 32px"
      },
      "borderTop": {
        "width": {
          "$value": "1px",
          "$type": "dimension",
          "$description": "Legal-Bereich obere Rahmenstärke"
        },
        "color": {
          "$value": "{neutral.200}",
          "$type": "color",
          "$description": "Legal-Bereich obere Rahmenfarbe"
        },
        "style": {
          "$value": "solid",
          "$type": "string",
          "$description": "Legal-Bereich oberer Rahmenstil"
        }
      },
      "paddingTop": {
        "$value": "{spacing.6}",
        "$type": "dimension",
        "$description": "Legal-Bereich oberes Padding - 24px"
      }
    }
  }
}
